{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "components": ["./src/components"],
      "api": ["./src/api"],
      "defined": ["./src/defined"],
      "hooks": ["./src/hooks"],
      "store": ["./src/store"],
      "public": ["./src/public/*"],
      "types": ["./src/types"],
      "layouts": ["./src/layouts"],
      "helpers": ["./src/helpers"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
